#
# Personal export definitions.
#

# Default PATH.
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin"

# Conditionally add some directories if they exist.
directories=(
    "${HOME}/bin"
    "/usr/local/opt/coreutils/libexec/gnubin"
    "/usr/local/opt/gnu-tar/libexec/gnubin"
    "/usr/local/opt/gnu-sed/libexec/gnubin"
)

if command -v composer >/dev/null 2>&1; then
    directories+=(
        "$(composer global config bin-dir --absolute 2>/dev/null)"
    )
fi

if command -v brew >/dev/null 2>&1; then
    directories+=(
        "$(brew --prefix homebrew/php/php70)/bin"
    )
fi

for dir in "${directories[@]}"; do
    [[ -d "$dir" ]] && PATH="$dir:$PATH"
done

export PATH="$PATH"

# Some other defaults
export CLICOLOR=1
export HISTCONTROL=ignoreboth
export HISTIGNORE='cd:l[sla]:[bf]g:pwd:clear:history'
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export EDITOR='vim -p -X'
export VISUAL=${EDITOR}
export GIT_EDITOR=${EDITOR}
