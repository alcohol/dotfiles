[core]
autocrlf = input
editor = vim
excludesfile = ~/.gitignore.global
filemode = false
pager = less --no-init --quit-if-one-screen --QUIET --chop-long-lines --RAW-CONTROL-CHARS --tabs 4 --quit-at-eof --

[color]
diff = auto
branch = auto
status = auto
ui = true

[apply]
whitespace = fix

[branch]
autosetupmerge = true

[user]
name = Rob Bast
email = rob.bast@gmail.com
signingkey = 73076E35E6165F39

[commit]
gpgsign = true
verbose = true

[tag]
gpgsign = true

[pull]
rebase = true

[fetch]
prune = true
parallel = 0

[push]
default = current

[merge]
log = true
stat = true
verbosity = 1
defaultToUpstream = true
tool = vimdiff

[rebase]
autosquash = true
autostash = true

[diff]
renames = copies
renamelimit = 0
mnemonicprefix = true
tool = vimdiff
submodule = diff

[difftool]
prompt = false

[rerere]
enabled = true
autoupdate = true

[help]
autocorrect = 15

[include]
path = ~/.gitconfig.local

[alias]
ls-ignored = ls-files --exclude-standard --ignored --others

[diff "ansible-vault"]
textconv = ansible-vault view --vault-id .ansible-vault-password
cachetextconv = false

[init]
defaultBranch = main
